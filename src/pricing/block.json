{
    "$schema": "https://json.schemastore.org/block.json",
    "apiVersion": 3,
    "title": "Pricing",
    "name": "gbc-blocks/pricing",
    "category": "gbc-blocks",
    "attributes": {
        "title": { 
            "type": "string"
        },
        "regularPrice": {
            "type": "string",
            "default": "9"
        },
        "priceHelpText": {
            "type": "string",
            "default": "x12"
        },
        "discountPrice": {
            "type": "boolean",
            "default": true
        },
        "discountHelpText": {
            "type": "string",
            "default": ""
        },
        "billedText": {
            "type": "string",
            "default": "Billed Annually"
        },
        "enableCampaign": {
            "type": "boolean",
            "default": false
        },
        "campaignPercent": {
            "type": "string",
            "default": "35"
        }
    },

    "icon": "dashicons dashicons-money-alt",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css"
}